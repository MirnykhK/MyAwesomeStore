<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAwesomeStore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="O">@android:color/transparent</item>
    </style>

    <style name="Theme.Splash" parent="Theme.MyAwesomeStore">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <style name="Theme.MainTheme" parent="Theme.MyAwesomeStore">
    </style>

    <style name="BottomToolbarStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TextView.MetropolisBold">
        <item name="fontFamily">@font/metropolis_bold</item>
    </style>
    <style name="TextView.MetropolisRegular">
        <item name="fontFamily">@font/metropolis_regular</item>
    </style>
    <style name="TextView.MetropolisSemiBold">
        <item name="fontFamily">@font/metropolis_semi_bold</item>
    </style>
    <style name="TextView.MetropolisMedium">
        <item name="fontFamily">@font/metropolis_medium</item>
    </style>
    <style name="TextView.MetropolisMedium.14">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>
    <style name="TextView.MetropolisBold.Title34">
        <item name="android:textSize">@dimen/text_size_34</item>
    </style>
    <style name="TextView.MetropolisRegular.SubTitle12">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/grey_text</item>
    </style>
    <style name="TextView.MetropolisRegular.Categorie16">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>
    <style name="TextView.MetropolisRegular.10Grey">
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/grey_text</item>
    </style>
    <style name="TextView.MetropolisRegular.10BottomToolbar">
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/bottom_toolbar_text</item>
    </style>
    <style name="TextView.MetropolisSemiBold.Sale12">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextView.MetropolisSemiBold.Title18">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>
    <style name="TextView.MetropolisSemiBold.Product16">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/black_text</item>
    </style>
    <style name="BorderlessTextButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily">@font/metropolis_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TopCategorieBorderlessTextButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily">@font/metropolis_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
